-- script by himrng (omgamlookyou4)

while true do
    task.wait() -- minimal yield to avoid instant kick
    local sanses = workspace:FindFirstChild("Sanses")
    if sanses then
        for _, obj in pairs(sanses:GetDescendants()) do
            if obj:IsA("ClickDetector") then
                fireclickdetector(obj)
                task.wait(0) -- absolute fastest possible safe yield
            end
        end
    end
end

-- script by himrng (omgamlookyou4)
