-- Variables
local player = game.Players.LocalPlayer
local humanoidRootPart
local humanoid
local moving = false
local swordEquipped = false
local uis = game:GetService("UserInputService")

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 10, 30)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(100, 50, 255)
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE MOVEMENT"
button.BackgroundColor3 = Color3.fromRGB(50, 50, 150)
button.TextColor3 = Color3.fromRGB(180, 100, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(200, 150, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

button.Parent = frame
statusLabel.Parent = frame

-- Equip "Hellfire" Sword
local function equipHellfire()
    local hellfire = player.Backpack:FindFirstChild("Hellfire")
    if hellfire then
        hellfire.Parent = player.Character
        swordEquipped = true
    end
end

-- Move the character in a circular pattern
local function moveInCircles(center, radius)
    local angle = 0
    while moving and humanoidRootPart and humanoid do
        -- Calculate circular path
        local x = center.X + math.cos(angle) * radius
        local z = center.Z + math.sin(angle) * radius

        -- Set the humanoid to move to the new position
        humanoid:MoveTo(Vector3.new(x, center.Y, z))

        -- Increase the angle to move in a circular direction
        angle = angle + math.rad(5)

        task.wait(0.1)  -- Adjust to change the speed of movement
    end
end

-- Spam Abilities (Q and E)
local function spamAbilities()
    while moving do
        -- Spam the "Q" key
        uis.InputBegan:Fire(Enum.InputType.Keyboard, Enum.KeyCode.Q, true)
        task.wait(0.5)
        uis.InputEnded:Fire(Enum.InputType.Keyboard, Enum.KeyCode.Q, true)
        task.wait(0.5)

        -- Spam the "E" key
        uis.InputBegan:Fire(Enum.InputType.Keyboard, Enum.KeyCode.E, true)
        task.wait(0.5)
        uis.InputEnded:Fire(Enum.InputType.Keyboard, Enum.KeyCode.E, true)
        task.wait(0.5)
    end
end

-- Character Added / Respawned
player.CharacterAdded:Connect(function(newCharacter)
    humanoidRootPart = newCharacter:WaitForChild("HumanoidRootPart")
    humanoid = newCharacter:WaitForChild("Humanoid")

    -- Equip "Hellfire" sword on respawn
    task.wait(1)
    equipHellfire()
end)

-- Button Toggle for Movement
button.MouseButton1Click:Connect(function()
    moving = not moving

    if moving then
        button.Text = "DISABLE MOVEMENT"
        button.BackgroundColor3 = Color3.fromRGB(120, 50, 255)
        statusLabel.Text = "Status: Moving"

        -- Start movement in circles with joystick style and key spamming abilities
        local centerPosition = humanoidRootPart.Position -- The starting point for the circle
        local radius = 3  -- Set a radius of 3 meters
        task.spawn(moveInCircles, centerPosition, radius)
        task.spawn(spamAbilities)
    else
        button.Text = "ENABLE MOVEMENT"
        button.BackgroundColor3 = Color3.fromRGB(50, 50, 150)
        statusLabel.Text = "Status: Idle"
    end
end)
