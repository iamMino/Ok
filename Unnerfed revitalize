local player = game.Players.LocalPlayer

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(10, 100, 10) -- Green UI
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE AUTO FARM"
button.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

local farming = false

button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "DISABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
        statusLabel.Text = "Status: Farming..."
    else
        button.Text = "ENABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        statusLabel.Text = "Status: Idle"
    end
end)

-- Function to find all ClickDetectors dynamically and fire them
local function autoClick()
    while farming do
        -- Loop through all children of the workspace
        for _, folder in pairs(workspace:GetChildren()) do
            -- Check if the folder contains ClickDetectors
            if folder:IsA("Folder") then
                for _, obj in pairs(folder:GetChildren()) do
                    if obj:IsA("Model") and obj:FindFirstChild("ClickDetector") then
                        local clickDetector = obj:FindFirstChild("ClickDetector")
                        -- Exclude unwanted ClickDetectors
                        if clickDetector and clickDetector.Parent and
                           not (clickDetector.Parent.Name == "shrinetrigger" or
                                clickDetector.Parent.Name == "box" or
                                clickDetector.Parent.Name == "openshop") then
                            pcall(function() fireclickdetector(clickDetector) end)
                        end
                    end
                end
            end
        end
        task.wait(0.05) -- Clicks super fast
    end
end

-- Auto farm loop
task.spawn(function()
    while true do
        if farming then
            autoClick()
        end
        task.wait(0.1)
    end
end)

-- Anti-AFK Script
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)
