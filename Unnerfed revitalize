local player = game.Players.LocalPlayer
local farming = false

-- UI Setup (unchanged)
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 10, 30) -- Dark Purple Background
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(100, 50, 255) -- Neon Blue Glow
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE AUTO FARM"
button.BackgroundColor3 = Color3.fromRGB(50, 50, 150) -- Deep Blue Button
button.TextColor3 = Color3.fromRGB(180, 100, 255) -- Light Purple Text
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = frame

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(200, 150, 255) -- Light Purple Text
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16
statusLabel.Parent = frame

-- Anti-AFK Script (unchanged)
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
	vu:CaptureController()
	vu:ClickButton2(Vector2.new())
end)

-- Exclusion: We want to ignore the following ClickDetectors exactly.
local excludedPaths = {
    "workspace.map.shrinetrigger.ClickDetector",
    "workspace.map.shrine.box.click",
    "workspace.map.shop.Sans.openshop"
}

local function isExcluded(clickDetector)
    if not clickDetector then 
        return false 
    end
    local fullName = clickDetector:GetFullName()
    for _, path in ipairs(excludedPaths) do
        if fullName == path then
            return true
        end
    end
    return false
end

-- Function to click all ClickDetectors in dynamic folders
local function clickAllDetectors()
    while farming do
        for _, obj in pairs(workspace:GetChildren()) do
            if obj:IsA("Folder") then
                for _, item in pairs(obj:GetChildren()) do
                    if item:IsA("Model") or item:IsA("Part") then
                        local detector = item:FindFirstChildWhichIsA("ClickDetector")
                        if detector and not isExcluded(detector) then
                            pcall(function()
                                fireclickdetector(detector)
                            end)
                        end
                    end
                end
            end
        end
        task.wait(math.random(50,80) / 1000) -- Delay between 0.05 and 0.08 seconds
    end
end

-- Button Toggle Auto Farm
button.MouseButton1Click:Connect(function()
    farming = not farming

    if farming then
        button.Text = "DISABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(120,255,120) -- Bright Green
        statusLabel.Text = "Status: Farming"
        task.spawn(clickAllDetectors)
    else
        button.Text = "ENABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(50,50,150) -- Deep Blue
        statusLabel.Text = "Status: Idle"
    end
end)
